generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Ce modèle stockera les infos publiques de tes users
model UserProfile {
  id           String   @id @default(uuid())
  userId       String   @unique // Le lien avec Supabase Auth (auth.users.id)
  email        String
  name         String?
  tier         String   @default("free") // "free", "pro", "enterprise"
  credits      Int      @default(10)     // Pour limiter l'usage IA
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  name      String
  strategy  Json     // Stocke le résultat de l'Agent 1
  
  // Champs pour l'Agent 2
  prd       String?  @db.Text 
  schema    String?  @db.Text 
  landingPageCode String? @db.Text // Le code React complet de la page d'accueil
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}