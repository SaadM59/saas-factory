generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Ce mod√®le stockera les infos publiques de tes users
model UserProfile {
  id           String   @id @default(uuid())
  userId       String   @unique // Le lien avec Supabase Auth (auth.users.id)
  email        String
  name         String?
  tier         String   @default("free") // "free", "pro", "enterprise"
  credits      Int      @default(10)     // Pour limiter l'usage IA
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}